            <label class="label-summary" for="summary">Summary</label>
            <br>
            <textarea class="textarea-summary" type="text" name="summary" id="summary" placeholder="article summary"/></textarea>
            <br/>
            <label class="label-text" for="text">Text</label>
            <br>
            <textarea class="textarea-text" rows="10" type="text" name="text" id="text"></textarea>
            <br/>
            <label class="label-category" for="category">Select Category</label>
            <br>
            <select class="select-category" name="category" id="category">
              <option value="blockchain">blockchain</option>
            </select>
            <br>
            <button>
              <a class="btn" href="/articles">Articles</a>
            </button>
          </article>
          </form>
